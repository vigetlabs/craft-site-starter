{
  "name": "joshuapease/craft-starter",
  "license": "0BSD",
  "type": "project",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "craftcms/cms": "^5.0.0",
    "vlucas/phpdotenv": "^5.4.0"
  },
  "require-dev": {
    "craftcms/generator": "^2.0.0",
    "yiisoft/yii2-shell": "^2.0.3"
  },
  "autoload": {
    "psr-4": {
      "modules\\": "modules/"
    }
  },
  "config": {
    "allow-plugins": {
      "craftcms/plugin-installer": true,
      "yiisoft/yii2-composer": true
    },
    "sort-packages": true,
    "optimize-autoloader": true,
    "platform": {
      "php": "8.2"
    }
  },
  "scripts": {
    "post-create-project-cmd": [
      "@php -r \"file_exists('.env') || copy('.env.example.dev', '.env');\"",
      "echo 'Renaming ddev project to prevent conflicts'",
      "@php install-scripts/rename-ddev.php",
      "echo 'Cleaning composer.json'",
      "@composer config --unset scripts.post-create-project-cmd",
      "@composer config --unset name",
      "@composer config --unset license",
      "@composer config --unset type",
      "@composer update",
      "@composer dump-autoload -o"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example.dev', '.env');\""
    ]
  }
}
